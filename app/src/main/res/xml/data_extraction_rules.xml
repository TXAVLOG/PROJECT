<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include music metadata and preferences -->
        <include domain="file" path="music_metadata/" />
        <include domain="sharedpref" path="user_preferences.xml" />
        
        <!-- Exclude sensitive audio files -->
        <exclude domain="file" path="audio_cache/" />
        <exclude domain="file" path="temp_audio/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include all user data for device transfer -->
        <include domain="file" path="." />
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>
