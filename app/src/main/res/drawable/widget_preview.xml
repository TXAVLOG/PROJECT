<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#1A1A1A" />
        </shape>
    </item>
    
    <!-- Sample album art placeholder -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:bottom="8dp"
        android:right="160dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#2A2A2A" />
        </shape>
    </item>
    
    <!-- Sample text lines -->
    <item
        android:left="120dp"
        android:top="20dp"
        android:bottom="70dp"
        android:right="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#333333" />
        </shape>
    </item>
    
    <item
        android:left="120dp"
        android:top="45dp"
        android:bottom="55dp"
        android:right="60dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#2A2A2A" />
        </shape>
    </item>
    
    <!-- Play button -->
    <item
        android:left="170dp"
        android:top="65dp"
        android:bottom="15dp"
        android:right="75dp">
        <shape android:shape="oval">
            <solid android:color="#00D269" />
        </shape>
    </item>
</layer-list>
