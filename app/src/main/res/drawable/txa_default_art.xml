        android:fillColor="#40FFFFFF"
        android:pathData="M115,65 v45.3 c-1.5,-0.8 -3.2,-1.3 -5,-1.3 c-5.5,0 -10,4.5 -10,10 s4.5,10 10,10 s10,-4.5 10,-10 V82 h20 V65 H115 z"/>

