    <!-- Background Gradient -->
    <path android:pathData="M0,0 h200 v200 h-200 z">
        <aapt:attr name="android:fillColor">
            <gradient 
                android:startX="0" 
                android:startY="0" 
                android:endX="200" 
                android:endY="200" 
                android:type="linear">
                <item android:offset="0" android:color="#FF2C3E50"/>
