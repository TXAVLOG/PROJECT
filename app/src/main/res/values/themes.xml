<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TXAMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Custom Fonts -->
        <!-- Default font (Vietnamese) -->
        <item name="fontFamily">@font/soyuz_grotesk</item>
        <item name="android:fontFamily">@font/soyuz_grotesk</item>
    </style>
    
    <!-- Base Text Style -->
    <style name="TextAppearance.TXA" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/soyuz_grotesk</item>
        <item name="android:fontFamily">@font/soyuz_grotesk</item>
    </style>

    <!-- Style for English text (apply manually where needed) -->
    <style name="TextAppearance.TXA.English" parent="TextAppearance.TXA">
        <item name="fontFamily">@font/lobster</item>
        <item name="android:fontFamily">@font/lobster</item>
    </style>
    
    <style name="Theme.TXAMusic.Splash" parent="Theme.TXAMusic">
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>
</resources>
