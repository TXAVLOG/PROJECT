<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/txa_surface"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="invisible"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TXA File Browser"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/txa_primary"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_music_note"
            android:contentDescription="Audio files" />

    </LinearLayout>

    <!-- Current Path -->
    <TextView
        android:id="@+id/tvCurrentPath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="/storage/emulated/0"
        android:textSize="12sp"
        android:textColor="@color/txa_text_secondary"
        android:ellipsize="start"
        android:singleLine="true"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:background="@color/txa_surface_variant"
        android:layout_marginBottom="8dp" />

    <!-- File List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFiles"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <!-- Empty State -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="No audio files found"
        android:textSize="14sp"
        android:textColor="@color/txa_text_secondary"
        android:visibility="gone" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txa_divider"
        android:layout_marginVertical="8dp" />

    <!-- Copyright Notice with Facebook Link -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Â© 2024 TXA Music"
            android:textSize="10sp"
            android:textColor="@color/txa_text_secondary"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:alpha="0.7" />

        <ImageView
            android:id="@+id/btnFacebook"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_facebook"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Facebook" />

    </LinearLayout>

</LinearLayout>
