<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A2E"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#00D9FF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- App Info Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#252540"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvAppInfoLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Application Information"
                    android:textColor="#00D9FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/tvVersionLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Version"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvVersionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0.0"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333344" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/tvAppSetIdLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="App Set ID"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvAppSetIdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Language Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#252540"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvLanguageLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textColor="#00D9FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangeLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Change Language"
                    android:textSize="14sp"
                    app:backgroundTint="#333355"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_preferences"
                    app:iconGravity="start" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- File Manager Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#252540"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvFileManagerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File Manager"
                    android:textColor="#00D9FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenFileManager"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Open File Manager"
                    android:textSize="14sp"
                    app:backgroundTint="#333355"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/ic_menu_save"
                    app:iconGravity="start" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Update Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#252540"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvUpdateLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="#00D9FF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCheckUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Check for Updates"
                    android:textSize="14sp"
                    app:backgroundTint="#00D9FF"
                    app:cornerRadius="8dp"
                    app:icon="@android:drawable/stat_sys_download"
                    app:iconGravity="start" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
