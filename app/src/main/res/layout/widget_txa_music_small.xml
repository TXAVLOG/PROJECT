<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A"
    android:orientation="horizontal"
    android:padding="6dp"
    android:gravity="center_vertical">

    <!-- Small Album Art with Circle Progress -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <ProgressBar
            android:id="@+id/widget_circle_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/widget_circle_progress_drawable" />

        <ImageView
            android:id="@+id/widget_album_art"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="@drawable/widget_album_art_bg"
            android:src="@drawable/ic_default_album_art" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/widget_media_titles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="TXA Music"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Artist"
            android:textColor="#B0B0B0"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="4dp">

        <ImageButton
            android:id="@+id/widget_btn_prev"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_prev_widget"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/widget_btn_play_pause"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play_widget"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/widget_btn_next"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_next_widget"
            android:scaleType="centerInside" />
    </LinearLayout>
</LinearLayout>
