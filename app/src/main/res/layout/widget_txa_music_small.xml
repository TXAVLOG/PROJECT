<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:background="@drawable/widget_album_art_bg"
        android:src="@drawable/ic_default_album_art"
        android:clipToOutline="true" />

    <LinearLayout
        android:id="@+id/widget_media_titles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="TXA Music"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Tap to play"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <ImageButton
            android:id="@+id/widget_btn_prev"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_prev_widget"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/widget_btn_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play_widget"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/widget_btn_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_skip_next_widget"
            android:scaleType="centerInside" />
    </LinearLayout>
</LinearLayout>
