<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Root: FrameLayout để có thể overlay Full Player lên trên -->
    <FrameLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface">

        <!-- Main App Layout (Fragment + Navigation) -->
        <LinearLayout
            android:id="@+id/appRootLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Content Area (Fragment + MiniPlayer + BottomNav) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Fragment Container -->
                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragment_container"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="?attr/colorSurface"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/main_graph"
                    tools:layout="@layout/fragment_home" />

                <!-- Bottom Group: Mini Player + Bottom Nav -->
                <LinearLayout
                    android:id="@+id/bottomGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:background="@android:color/transparent">

                    <FrameLayout
                        android:id="@+id/miniPlayer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mini_player_height"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <fragment
                            android:id="@+id/miniPlayerFragment"
                            android:name="com.txapp.musicplayer.ui.fragment.MiniPlayerFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:layout="@layout/fragment_mini_player" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp" />

                    <androidx.compose.ui.platform.ComposeView
                        android:id="@+id/bottomNavComposeView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/bottom_nav_height" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Layer 2: Sliding Panel for Full Player - Overlay toàn bộ khi expand -->
        <FrameLayout
            android:id="@+id/slidingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:elevation="20dp"
            tools:visibility="gone">

            <FrameLayout
                android:id="@+id/playerFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorSurface" />

        </FrameLayout>

        <!-- Layer 3: Compose Overlay (for dialogs, modals) - Cao nhất -->
        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/composeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="24dp" />

    </FrameLayout>
</layout>
