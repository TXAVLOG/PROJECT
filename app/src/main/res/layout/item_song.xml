<?xml version="1.0" encoding="utf-8"?>
<!-- TXA Music - Song Item Layout (ZingMp3 Style) -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:paddingVertical="10dp">

    <!-- Selection Checkbox (Hidden by default) -->
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbSelect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:button="@null"
        android:background="@drawable/ic_check_circle"
        app:buttonTint="@color/txa_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Album Art (Rounded Rectangle - ZingMp3 Style) -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAlbumArt"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="0dp"
        android:src="@drawable/ic_music_note"
        android:scaleType="centerCrop"
        android:background="@color/txa_surface_variant"
        app:shapeAppearanceOverlay="@style/RoundedCornerImage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Play Icon Overlay (Shows on hover/active) -->
    <ImageView
        android:id="@+id/ivPlayOverlay"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_play"
        android:visibility="gone"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/ivAlbumArt"
        app:layout_constraintEnd_toEndOf="@id/ivAlbumArt"
        app:layout_constraintStart_toStartOf="@id/ivAlbumArt"
        app:layout_constraintTop_toTopOf="@id/ivAlbumArt"/>

    <!-- Track Info Container -->
    <LinearLayout
        android:id="@+id/trackInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMenu"
        app:layout_constraintStart_toEndOf="@+id/ivAlbumArt"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Song Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Song Title"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Artist + Duration Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <!-- Artist Name -->
            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Artist Name"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="13sp" />

            <!-- Separator Dot -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ "
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"/>

            <!-- Duration -->
            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3:45"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Menu Button (3 dots) -->
    <ImageView
        android:id="@+id/btnMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_more_vert"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu"
        app:tint="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Selection Overlay -->
    <View
        android:id="@+id/selectionOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/txa_primary"
        android:alpha="0.12"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Now Playing Indicator (for currently playing song) -->
    <View
        android:id="@+id/nowPlayingIndicator"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/txa_primary"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
