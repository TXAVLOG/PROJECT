<?xml version="1.0" encoding="utf-8"?>
<!-- TXA Volume Control Dialog Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_sheet">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/txa_on_surface"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Media Volume (App) -->
    <TextView
        android:id="@+id/tvMediaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media Volume"
        android:textSize="14sp"
        android:textColor="@color/txa_on_surface_variant"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/ivMediaIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_volume_up"
            app:tint="@color/txa_primary" />

        <SeekBar
            android:id="@+id/seekMediaVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/tvMediaValue"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="14sp"
            android:textColor="@color/txa_on_surface"
            android:gravity="end" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/txa_outline"
        android:alpha="0.3"
        android:layout_marginBottom="24dp" />

    <!-- System Volume -->
    <TextView
        android:id="@+id/tvSystemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System Volume"
        android:textSize="14sp"
        android:textColor="@color/txa_on_surface_variant"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/ivSystemIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_volume_up"
            app:tint="@color/txa_secondary" />

        <SeekBar
            android:id="@+id/seekSystemVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:max="15"
            android:progress="15"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb" />

        <TextView
            android:id="@+id/tvSystemValue"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="14sp"
            android:textColor="@color/txa_on_surface"
            android:gravity="end" />
    </LinearLayout>

    <!-- Info text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System volume syncs with device settings"
        android:textSize="12sp"
        android:textColor="@color/txa_on_surface_variant"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
