<?xml version="1.0" encoding="utf-8"?>
<!-- TXA Pill MiniPlayer Layout
     Inspired by Namida's MiniPlayer and Dynamic Island
     @author TXA - fb.com/vlog.txa.2311 -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Progress Bar (bottom edge) -->
    <View
        android:id="@+id/progressBar"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_gravity="bottom"
        android:background="@color/txa_primary" />

    <!-- Collapsed Content (Always Visible) -->
    <LinearLayout
        android:id="@+id/collapsedContent"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Album Art (Rotating Disc) -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">
            
            <ImageView
                android:id="@+id/ivAlbumArt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_note"
                android:background="@drawable/bg_circle_primary"
                android:padding="2dp"
                android:clipToOutline="true"
                tools:src="@drawable/ic_music_note" />
        </FrameLayout>

        <!-- Track Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/txa_on_surface"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:singleLine="true"
                tools:text="Song Title" />

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/txa_on_surface_variant"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Artist Name" />
        </LinearLayout>

        <!-- Compact Control Buttons -->
        <LinearLayout
            android:id="@+id/compactButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnPrevious"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Previous"
                app:tint="@color/txa_on_surface" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/bg_circle_primary"
                android:padding="10dp"
                android:contentDescription="Play/Pause"
                app:tint="@color/txa_on_primary" />

            <ImageButton
                android:id="@+id/btnNext"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Next"
                app:tint="@color/txa_on_surface" />
        </LinearLayout>
    </LinearLayout>

    <!-- Expanded Content (Shown when expanded) -->
    <LinearLayout
        android:id="@+id/expandedContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:alpha="0"
        android:visibility="gone">

        <!-- Large Album Art -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivAlbumArtLarge"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_note"
                android:background="@drawable/bg_album_art_rounded"
                android:clipToOutline="true"
                android:elevation="8dp" />
        </FrameLayout>

        <!-- Seekbar -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
            android:max="100"
            android:progress="0" />

        <!-- Time Labels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvCurrentTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/txa_on_surface_variant"
                tools:text="0:00" />

            <TextView
                android:id="@+id/tvTotalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/txa_on_surface_variant"
                tools:text="3:45" />
        </LinearLayout>

        <!-- Extended Control Buttons -->
        <LinearLayout
            android:id="@+id/extendedButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnShuffle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_shuffle"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Shuffle"
                app:tint="@color/txa_on_surface_variant" />

            <ImageButton
                android:id="@+id/btnPreviousLarge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Previous"
                app:tint="@color/txa_on_surface" />

            <ImageButton
                android:id="@+id/btnPlayPauseLarge"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/bg_circle_primary"
                android:padding="16dp"
                android:elevation="4dp"
                android:contentDescription="Play/Pause"
                app:tint="@color/txa_on_primary" />

            <ImageButton
                android:id="@+id/btnNextLarge"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Next"
                app:tint="@color/txa_on_surface" />

            <ImageButton
                android:id="@+id/btnRepeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_repeat"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Repeat"
                app:tint="@color/txa_on_surface_variant" />
        </LinearLayout>

        <!-- Extra Buttons Row (Like, Stop, Sleep, etc) -->
        <LinearLayout
            android:id="@+id/extraButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_heart"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Like"
                app:tint="@color/txa_on_surface_variant" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_stop"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Stop"
                app:tint="@color/txa_on_surface_variant" />

            <ImageButton
                android:id="@+id/btnSleep"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_sleep"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Sleep Timer"
                app:tint="@color/txa_on_surface_variant" />

            <ImageButton
                android:id="@+id/btnLyrics"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_lyrics"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Lyrics"
                app:tint="@color/txa_on_surface_variant" />
        </LinearLayout>
    </LinearLayout>
</merge>
