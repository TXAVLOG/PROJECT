<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_music"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/libraryFragment"
        android:name="gc.txa.demo.ui.library.LibraryFragment"
        android:label="Library"
        tools:layout="@layout/fragment_library">
        
        <action
            android:id="@+id/action_libraryFragment_to_songsFragment"
            app:destination="@id/songsFragment" />
            
        <action
            android:id="@+id/action_libraryFragment_to_albumsFragment"
            app:destination="@id/albumsFragment" />
            
        <action
            android:id="@+id/action_libraryFragment_to_artistsFragment"
            app:destination="@id/artistsFragment" />
            
        <action
            android:id="@+id/action_libraryFragment_to_nowPlayingFragment"
            app:destination="@id/nowPlayingFragment" />
    </fragment>

    <fragment
        android:id="@+id/songsFragment"
        android:name="gc.txa.demo.ui.songs.SongsFragment"
        android:label="Songs"
        tools:layout="@layout/fragment_songs">
        
        <argument
            android:name="artistName"
            android:defaultValue=""
            app:argType="string" />
            
        <argument
            android:name="albumName"
            android:defaultValue=""
            app:argType="string" />
            
        <action
            android:id="@+id/action_songsFragment_to_nowPlayingFragment"
            app:destination="@id/nowPlayingFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumsFragment"
        android:name="gc.txa.demo.ui.albums.AlbumsFragment"
        android:label="Albums"
        tools:layout="@layout/fragment_albums">
        
        <action
            android:id="@+id/action_albumsFragment_to_songsFragment"
            app:destination="@id/songsFragment" />
    </fragment>

    <fragment
        android:id="@+id/artistsFragment"
        android:name="gc.txa.demo.ui.artists.ArtistsFragment"
        android:label="Artists"
        tools:layout="@layout/fragment_artists">
        
        <action
            android:id="@+id/action_artistsFragment_to_songsFragment"
            app:destination="@id/songsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nowPlayingFragment"
        android:name="gc.txa.demo.ui.nowplaying.NowPlayingFragment"
        android:label="Now Playing"
        tools:layout="@layout/fragment_now_playing" />

</navigation>
